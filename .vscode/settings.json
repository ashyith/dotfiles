{
  // Workbench
  "workbench.colorTheme": "Catppuccin Mocha",
  "workbench.iconTheme": "symbols",
  "workbench.list.smoothScrolling": true,
  "workbench.fontAliasing": "antialiased",
  "workbench.tree.expandMode": "singleClick",
  "workbench.layoutControl.enabled": false,
  "workbench.startupEditor": "none",
  "workbench.sideBar.location": "right",
  "workbench.statusBar.visible": false,
  "workbench.activityBar.location": "hidden",

  // Editor
  "editor.fontFamily": "DejaVuSansM Nerd Font",  
  "editor.fontSize": 12,
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll": "never",
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "never"
  },
  "editor.tabSize": 2,
  "editor.find.addExtraSpaceOnTop": true,
  "editor.stickyScroll.enabled": false,
  "editor.suggestSelection": "first",
  "editor.wordSeparators": "`~!@#%^&*()=+[{]}\\|;:'\",.<>/?",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": false,
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.horizontal": "hidden",
  "diffEditor.ignoreTrimWhitespace": false,
  "breadcrumbs.enabled": false,

  // Window
  "window.titleBarStyle": "custom",
  "window.dialogStyle": "custom",
  "window.title": "ðŸ¥·",
  "window.zoomLevel": 2, 
  "window.nativeTabs": false,
  "window.customTitleBarVisibility": "never",
  "window.commandCenter": false,
  
  // Explorer
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.compactFolders": false,
  "files.autoSave": "onFocusChange", 

  // Terminal
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontWeight": "300",
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.fontFamily": "DejaVuSansM Nerd Font",
  "terminal.integrated.fontSize": 12,

  // Vim
  "vim.normalModeKeyBindingsNonRecursive": [
    {
        "before": ["{"],
        "after": ["{", "z", "z"]
    },
    {
        "before": ["}"],
        "after": ["}", "z", "z"]
    }
  ],
  "vim.useSystemClipboard": true,

  // Error lens extension config 
  "errorLens.enabledDiagnosticLevels": [
    "warning",
    "error"
  ],
  "errorLens.excludeBySource": [
    "cSpell",
    "Grammarly",
    "eslint"
  ],

  // ESLint extension settings 
  "eslint.validate": [
    "javascript",
    "typescript",
    "vue",
    "html",
    "markdown",
    "json",
    "jsonc",
    "yaml",
  ],

  // code-spell-checker extension settings
  "cSpell.userWords": [
    "antfu",
    "Arcanify",
    "clsx",
    "iconify",
    "Kinde",
    "nuxt",
    "nuxtjs",
    "pinia",
    "primevue",
    "prio",
    "shadcn",
    "sjkey",
    "tsup",
    "Unocss",
    "unplugin",
    "Vitesse",
    "vuepic",
    "vueuse"
  ],
  "cSpell.allowCompoundWords": true,
  "cSpell.language": "en,en-US,pl",

  "search.exclude": {
    "**/.git": true,
    "**/.github": true,
    "**/.nuxt": true,
    "**/.output": true,
    "**/.pnpm": true,
    "**/.vscode": true,
    "**/.yarn": true,
    "**/bower_components": true,
    "**/dist/**": true,
    "**/logs": true,
    "**/node_modules": true,
    "**/out/**": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/tmp": true,
    "**/yarn.lock": true
  },

  "css.lint.unknownAtRules": "ignore",
  "github.copilot.editor.enableAutoCompletions": true,
  "tailwind-fold.autoFold": false,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "editor.gotoLocation.multipleDefinitions": "goto",
}
